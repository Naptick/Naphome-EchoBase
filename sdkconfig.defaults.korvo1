# Korvo1 board configuration defaults
# This file contains board-specific ESP-IDF configuration for Korvo1

CONFIG_BOARD_KORVO1=y

# Korvo1 uses 16 MB flash
CONFIG_ESPTOOLPY_FLASHSIZE=16MB

# Partition table configuration
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"

# Audio configuration
CONFIG_AUDIO_SAMPLE_RATE=44100
CONFIG_LOG_SWEEP_DURATION_SEC=5
CONFIG_LOG_SWEEP_START_FREQ=20
CONFIG_LOG_SWEEP_END_FREQ=20000

# LED configuration
CONFIG_LED_AUDIO_STRIP_GPIO=19
CONFIG_LED_AUDIO_LED_COUNT=12
CONFIG_LED_AUDIO_BRIGHTNESS=64

# Common ESP-IDF settings
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ=240
CONFIG_ESP_WIFI_AUTH_WPA2_PSK_SHA256=y
CONFIG_LWIP_IPV6=y

# Logging
CONFIG_LOG_DEFAULT_LEVEL=2
